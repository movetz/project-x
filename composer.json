{
    "name": "movetz/project-x",
    "description" : "Example of RESTful API based on PSR-15 like handlers and HTTP middleware.",
    "require": {
        "php": ">=7.1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8091 index.php",
        "test": "phpunit"
    }
}
